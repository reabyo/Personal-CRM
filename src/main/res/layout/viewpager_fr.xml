<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FBEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="3"
        android:layout_marginBottom="7dp">

        <Button
            android:id="@+id/moveToAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Add"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Search"/>

        <Button
            android:id="@+id/moveToCalendar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Calender"/>

    </LinearLayout>

    <TextView
        android:id="@+id/search_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search customer:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_tabs"
        app:tabTextAppearance="@style/TabLayoutTextAppearance"
        app:tabSelectedTextColor="@color/tab1"
        app:tabTextColor="@color/tab2"
        android:paddingBottom="10dp"
        android:background="@drawable/tab_style"
        app:tabBackground="@drawable/tab_style"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/search_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>